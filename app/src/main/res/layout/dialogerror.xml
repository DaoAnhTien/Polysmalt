<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_10sdp"
    app:cardCornerRadius="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_30sdp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@color/colorAccent"
            >
            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/white"
                android:text="Thanh toán thất bại"
                android:textStyle="bold"
                android:layout_gravity="center"
                />
            <ImageView
                android:id="@+id/dialog_imgCancel"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/cancel7"
                android:layout_gravity="center|right"
                android:layout_marginRight="@dimen/_10sdp"
                />
        </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            >
            <ImageView
                android:id="@+id/dialog_Img"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/iconerror"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_2sdp"
                />
            <TextView
                android:id="@+id/dialog_txtnotifi"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vui lòng cập nhật thông tin"
                android:layout_gravity="center"
                android:textColor="@color/red"
                android:textSize="@dimen/_14ssp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_4sdp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                >
                <Button
                    android:id="@+id/dialog_btnHuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hủy"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:inputType="text"
                    android:textSize="@dimen/_12ssp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_4sdp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                >
                <Button
                    android:id="@+id/dialog_btnUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cập nhật"
                    android:background="@color/colorAccent"
                    android:textColor="@color/white"
                    android:inputType="text"
                    android:textSize="@dimen/_12ssp"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>