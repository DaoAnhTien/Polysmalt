<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Login_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/logo"
                android:layout_margin="@dimen/_10sdp"
                android:layout_gravity="right"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:text="Chào mừng trở lại"
                        android:textColor="@color/black"
                        android:paddingLeft="20dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dể dàng lựa chọn"
                        android:paddingLeft="20dp"
                        android:textSize="16dp"
                        android:textColor="#6A6A6A"
                        android:layout_marginTop="12dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="thiết bị di động phù hợp với bạn "
                        android:paddingLeft="20dp"
                        android:textSize="16dp"
                        android:textColor="#6A6A6A"
                        android:layout_marginTop="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="40dp"
                        >
                        <TextView
                            android:id="@+id/txt_validate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thông tin không khớp."
                            android:gravity="center"
                            android:textColor="@color/red"
                            android:textSize="@dimen/_12ssp"
                            android:visibility="gone"
                            />
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            app:cardCornerRadius="10dp"
                            >
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/email"
                                app:startIconTint="@color/purple_500"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/white"
                                    android:hint="Email"
                                    android:padding="15dp"
                                    android:textColor="#6A6A6A" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            app:cardCornerRadius="10dp"
                            >
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:startIconDrawable="@drawable/matkhau"
                                app:startIconTint="@color/purple_500"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                app:endIconMode="password_toggle"
                                app:endIconTint="@color/purple_500"
                                >
                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Mật khẩu"
                                    android:background="@color/white"
                                    android:padding="15dp"
                                    android:textColor="#6A6A6A"
                                    android:inputType="textPassword"
                                    android:id="@+id/edt_password"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:visibility="gone"
                            android:layout_marginLeft="@dimen/_20sdp"
                            >
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_20sdp"
                                android:button="@drawable/checkboxcustomtow"
                                android:text="Lưu ID"
                                android:id="@+id/checkboxLuuID"
                                />

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_20sdp"
                                android:button="@drawable/checkboxcustomtow"
                                android:text="Đăng nhập tự động"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:id="@+id/checkboxDangnhaptudong"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#F26C68"
                        app:cardCornerRadius="8dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginHorizontal="@dimen/_50sdp"
                        >
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Đăng nhập"
                                android:inputType="text"
                                android:textSize="18dp"
                                android:background="@drawable/background_btn"
                                android:textColor="@color/white"
                                android:id="@+id/btn_dangnhap"
                                />
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Đăng nhập khác"
                        android:textSize="18dp"
                        android:textColor="#6A6A6A"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:visibility="gone"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        >
                        <ImageView
                            android:id="@+id/imgFacebook"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:src="@drawable/facebook"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            />
                        <ImageView
                            android:id="@+id/imgGoogle"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:src="@drawable/google"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Hoặc"
                        android:textSize="18dp"
                        android:textColor="#6A6A6A"
                        android:layout_marginVertical="@dimen/_10sdp"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:background="@drawable/btn_background_canhan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đăng ký"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:id="@+id/txt_dangky"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="|"
                            android:textSize="16dp"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:background="@drawable/btn_background_canhan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Truy vấn thông tin tài khoản"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:id="@+id/txt_truyvan"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chkRememberPass"
                android:checked="true"
                android:visibility="gone"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>