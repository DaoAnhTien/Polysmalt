<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.Doanhthu.Doanhthu_Activity"
    android:background="#FFFBFBFB"
    >
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Thống kê"
            />
            <LinearLayout
                android:layout_gravity="right|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_4sdp"
                    >
                    <TextView
                        android:id="@+id/txtThongke"
                        android:background="@drawable/btn_background_canhan"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:text="Thống kê"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:padding="@dimen/_5sdp"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    >
                    <TextView
                        android:id="@+id/txtDoanhthu"
                        android:background="@drawable/btn_background_canhan"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:text="Doanh thu"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:padding="@dimen/_5sdp"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
    </FrameLayout>

</androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/LinearLayout_Top"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginHorizontal="@dimen/_1sdp"
            app:cardCornerRadius="@dimen/_4sdp"
            >
            <Button
                android:id="@+id/buttonbanchaynhat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Bán chạy nhất"
                android:inputType="text"
                android:background="@color/purple_500"
                android:textColor="@color/white"
                android:padding="@dimen/_5sdp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_4sdp"
            >
            <Button
                android:id="@+id/buttonbanit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Bán ít"
                android:inputType="text"
                android:background="@color/purple_500"
                android:textColor="@color/white"
                android:padding="@dimen/_5sdp"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
<!-- View-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/LinearLayout1"
            android:visibility="gone"
            >
            <LinearLayout
                android:id="@+id/LinearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <TextView
                    android:paddingLeft="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sản phẩm bán chạy nhất"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    />
                <com.github.mikephil.charting.charts.PieChart
                    android:layout_gravity="center"
                    android:id="@+id/piechartnhieunhat"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Danh sách chi tiết"
                    android:textSize="@dimen/_14ssp"
                    android:paddingLeft="@dimen/_4sdp"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_marginVertical="@dimen/_2sdp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:paddingLeft="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="wrap_content"
                            android:text="Tên sản phẩm"
                            android:textSize="@dimen/_12ssp"
                            />
                        <TextView
                            android:paddingLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/black"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="wrap_content"
                            android:text="Tổng số lượng"/>
                    </LinearLayout>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/RecyclerViewpiechartnhieunhat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sản phẩm bán ít nhất"
                    android:textSize="@dimen/_14ssp"
                    android:paddingLeft="@dimen/_4sdp"
                    android:textColor="@color/black"
                    />
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechartitnhat"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Danh sách chi tiết"
                    android:textSize="@dimen/_14ssp"
                    android:paddingLeft="@dimen/_4sdp"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_marginVertical="@dimen/_2sdp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:paddingLeft="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="wrap_content"
                            android:text="Tên sản phẩm"
                            android:textSize="@dimen/_12ssp"
                            />
                        <TextView
                            android:paddingLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/black"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="wrap_content"
                            android:text="Tổng số lượng"/>
                    </LinearLayout>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/RecyclerViewpiechartitnhat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:id="@+id/LinearLayout4"
             android:visibility="gone"
             >
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_marginHorizontal="@dimen/_10sdp"
                 android:layout_marginVertical="@dimen/_5sdp"
                 android:visibility="gone"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Tổng doanh thu nâng cấp VIP:"
                     android:layout_gravity="center"
                     android:textSize="@dimen/_14sdp"
                     android:textColor="@color/black"
                     />
                 <androidx.recyclerview.widget.RecyclerView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/rc_tongVip"
                     />
             </LinearLayout>
             <View
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_1sdp"
                 android:background="#E8E8E8"
                 android:layout_marginVertical="@dimen/_1sdp"
                 />
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_marginHorizontal="@dimen/_10sdp"
                 android:layout_marginVertical="@dimen/_5sdp"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Tổng doanh thu:"
                     android:layout_gravity="center"
                     android:textSize="@dimen/_14sdp"
                     android:textColor="@color/black"
                     />
                 <androidx.recyclerview.widget.RecyclerView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/rc_Tong"
                     />
                 <TextView
                     android:id="@+id/txt_doanhthuchitiet"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Chi tiết"
                     android:layout_gravity="center"
                     android:textColor="@color/black"
                     android:layout_marginLeft="@dimen/_10sdp"
                     android:textSize="@dimen/_12ssp"
                     android:background="@drawable/btn_background_canhan"
                     />
             </LinearLayout>

             <com.github.mikephil.charting.charts.BarChart
                 android:id="@+id/idBarChart"
                 android:layout_width="@dimen/_300sdp"
                 android:layout_height="@dimen/_200sdp"
                 android:layout_gravity="center"
                 />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Thông số chi tiết"
                 android:textColor="@color/black"
                 android:textSize="@dimen/_16ssp"
                 android:layout_marginLeft="@dimen/_10sdp"
                 android:layout_marginTop="@dimen/_10sdp"
                 />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            >
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/BarChart_tinhphantram"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/danhsachname"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                />
        </LinearLayout>
             <androidx.cardview.widget.CardView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"

                 app:cardBackgroundColor="@color/white"
                 >
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  >
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Danh sách chi tiết"
                      android:layout_marginHorizontal="@dimen/_10sdp"
                      android:layout_marginBottom="@dimen/_5sdp"
                      android:textColor="@color/black"
                      android:textSize="@dimen/_14ssp"
                      />
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginHorizontal="@dimen/_8sdp"
                      android:layout_marginVertical="@dimen/_2sdp"
                      >
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          >
                          <TextView
                              android:paddingLeft="@dimen/_5sdp"
                              android:textColor="@color/black"
                              android:layout_width="@dimen/_150sdp"
                              android:layout_height="wrap_content"
                              android:text="Tên sản phẩm"
                              android:textSize="@dimen/_12ssp"
                              />
                          <TextView
                              android:paddingLeft="@dimen/_5sdp"
                              android:textSize="@dimen/_12ssp"
                              android:textColor="@color/black"
                              android:layout_width="@dimen/_150sdp"
                              android:layout_height="wrap_content"
                              android:text="Tổng tiền"/>
                      </LinearLayout>
                  </LinearLayout>
                  <androidx.recyclerview.widget.RecyclerView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/RecyclerViewchitiet_doanhthu"
                      />
              </LinearLayout>
             </androidx.cardview.widget.CardView>
         </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/LinearLayout5"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chi tiết doanh thu"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="@dimen/_10sdp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rcAllchitietdoanhthu"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_gravity="right"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng doanh thu:"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/black"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rc_Tong2"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>