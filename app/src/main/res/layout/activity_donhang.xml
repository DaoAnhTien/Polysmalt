<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.Activiry.DonhangLichsu.DonhangActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_45sdp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_2sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn mua"
                    android:padding="@dimen/_6sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <FrameLayout
                        android:id="@+id/FrameLayout_giohang"
                        android:layout_gravity="center|right"
                        android:layout_width="50dp"
                        android:layout_height="?attr/actionBarSize"
                        >
                        <com.nex3z.notificationbadge.NotificationBadge
                            android:id="@+id/menusl"
                            android:layout_gravity="top|right"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:visibility="gone"
                            />
                        <ImageView
                            android:layout_marginTop="15dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/giohang"/>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:fillViewport="false"
            >
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayoutDonhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabBackground="@color/white"
                app:tabTextColor="@color/black"
                app:tabSelectedTextColor="@color/white"
                app:tabMode="scrollable"
                app:tabGravity="center"
                app:tabIndicatorGravity="stretch"
                app:tabIndicator="@drawable/tabdonhang"
                app:tabIndicatorAnimationMode="elastic"
                app:tabTextAppearance="@style/MycustomTextAppearance"
                />

        </HorizontalScrollView>
        <androidx.viewpager.widget.ViewPager
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tabLayoutDonhang"
            android:id="@+id/ViewPagerDonhang"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <com.ismaeldivita.chipnavigation.ChipNavigationBar
            android:id="@+id/navigationAdmin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/menucustom"
            app:cnb_menuResource="@menu/menu_admin"
            app:cnb_iconColor="@color/white"
            app:cnb_unselectedColor="@color/white"
            />
        <com.ismaeldivita.chipnavigation.ChipNavigationBar
            android:id="@+id/navigationUser"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/menucustom"
            app:cnb_menuResource="@menu/menu"
            app:cnb_iconColor="@color/white"
            app:cnb_unselectedColor="@color/white"
            />
    </LinearLayout>
</RelativeLayout>