                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:text="Sản phẩm mới "
                                        android:layout_gravity="center"
                                        android:layout_weight="10"
                                        android:paddingLeft="@dimen/_10sdp"
                                        />
                                    <ImageView

