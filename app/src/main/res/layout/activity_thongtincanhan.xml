                     <com.nex3z.notificationbadge.NotificationBadge
                         android:id="@+id/menusl"
                         android:layout_gravity="top|right"
                         android:layout_width="28dp"
                         android:layout_height="28dp"
                         android:visibility="gone"
                         />
                     <ImageView
