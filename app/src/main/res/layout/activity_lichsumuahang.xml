<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.LichsumuahangActivity">


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/RefeshLayout"
        android:layout_marginBottom="@dimen/_50sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đơn mua"
                        android:padding="@dimen/_6sdp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16ssp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <FrameLayout
                            android:id="@+id/FrameLayout_giohang"
                            android:layout_gravity="center|right"
                            android:layout_width="50dp"
                            android:layout_height="?attr/actionBarSize"
                            >
                            <com.nex3z.notificationbadge.NotificationBadge
                                android:id="@+id/menusl"
                                android:layout_gravity="top|right"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:visibility="gone"
                                />
                            <ImageView
                                android:layout_marginTop="15dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/giohang"/>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scrollbars="none"
                android:fillViewport="false"
                android:layout_marginVertical="@dimen/_5sdp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        app:cardCornerRadius="@dimen/_4sdp"
                        >
                        <TextView
                            android:id="@+id/choxacnhan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_background_canhan"
                            android:focusable="false"
                            android:padding="@dimen/_5sdp"
                            android:text="Chờ xác nhận"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        app:cardCornerRadius="@dimen/_4sdp"
                        >
                        <TextView
                            android:id="@+id/cholayhang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_background_canhan"
                            android:focusable="false"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:text="Chờ lấy hàng"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        app:cardCornerRadius="@dimen/_4sdp"
                        >
                        <TextView
                            android:id="@+id/danggiao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_background_canhan"
                            android:focusable="false"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:text="Đang giao"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        app:cardCornerRadius="@dimen/_4sdp"
                        >
                        <TextView
                            android:id="@+id/dagiao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_background_canhan"
                            android:focusable="false"
                            android:padding="@dimen/_5sdp"
                            android:text="Đã giao"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        app:cardCornerRadius="@dimen/_4sdp"
                        >
                        <TextView
                            android:id="@+id/dahuy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_background_canhan"
                            android:focusable="false"
                            android:padding="@dimen/_5sdp"
                            android:text="Đã hủy"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        app:cardCornerRadius="@dimen/_4sdp"
                        >
                        <TextView
                            android:id="@+id/tatca"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_background_canhan"
                            android:focusable="false"
                            android:padding="@dimen/_5sdp"
                            android:text="Tất cả"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerViewChoxacnhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:visibility="visible"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerViewCholayhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:visibility="gone"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerViewDanggiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:visibility="gone"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerViewDagiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:visibility="gone"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerViewDahuy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:visibility="gone"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerViewLichsu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:visibility="gone"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/line2"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:id="@+id/imageNote"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/note"/>
                    <TextView
                        android:id="@+id/textNote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lịch sử trống"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:textSize="@dimen/_20sdp"
                        android:textColor="@color/red"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btncuahang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#ED4C2F"
                        android:inputType="text"
                        android:padding="@dimen/_10sdp"
                        android:text="Cửa hàng"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <com.ismaeldivita.chipnavigation.ChipNavigationBar
            android:id="@+id/navigationAdmin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/menucustom"
            app:cnb_menuResource="@menu/menu_admin"
            app:cnb_iconColor="@color/white"
            app:cnb_unselectedColor="@color/white"
            />
        <com.ismaeldivita.chipnavigation.ChipNavigationBar
            android:id="@+id/navigationUser"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/menucustom"
            app:cnb_menuResource="@menu/menu"
            app:cnb_iconColor="@color/white"
            app:cnb_unselectedColor="@color/white"
            />
    </LinearLayout>

</RelativeLayout>