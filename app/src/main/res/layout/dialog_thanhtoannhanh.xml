<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
        <FrameLayout
           android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:background="@drawable/btn_background_canhan"
                android:id="@+id/dialog_thoat_muanhanh"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/dialog_cencel"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_10sdp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_10sdp"
                >
                <ImageView
                    android:id="@+id/dialog_img_sanham"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/ic_baseline_cancel_24"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_10sdp"
                    >
                    <TextView
                        android:textSize="@dimen/_18ssp"
                        android:id="@+id/dialog_tensanpham"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="ten san pham"
                        />
                    <TextView
                        android:textSize="@dimen/_16ssp"
                        android:id="@+id/dialog_txt_gia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:text="gia san pham"
                        />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#E8E8E8"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10sdp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/_20sdp"
                >
                <ImageView
                    android:background="@drawable/background_remove"
                    android:id="@+id/dialog_remove"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/remove_24"
                    />
                <TextView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/background_center"
                    android:id="@+id/dialog_soluong"
                    android:text="1"
                    android:textColor="@color/black"
                    android:gravity="center"
                    />

                <ImageView
                    android:background="@drawable/background_add"
                    android:id="@+id/dialog_add_nhanh"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/add_24" />
            </LinearLayout>
        </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#E8E8E8"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_muangay"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@color/purple_500"
        android:text="Mua ngay"
        android:inputType="text"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/white"
        />
</LinearLayout>

