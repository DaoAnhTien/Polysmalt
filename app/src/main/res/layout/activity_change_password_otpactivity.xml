<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.otp.ChangePasswordOTPActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_2sdp"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/Toolbar"
            app:title="Lấy lại mật khẩu"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
        </androidx.appcompat.widget.Toolbar>
    </androidx.cardview.widget.CardView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:src="@drawable/logo"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_40sdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_1sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/txtNotificationCheck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Notification"
                        android:gravity="center"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/red"
                        android:visibility="gone"
                        />
                    <androidx.cardview.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="5dp"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:startIconDrawable="@drawable/matkhau"
                            app:startIconTint="#F26C68"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:endIconMode="password_toggle"
                            app:endIconTint="#F26C68"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtPasswordMoi"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Mật khẩu mới"
                                android:background="@color/white"
                                android:padding="15dp"
                                android:textColor="@color/black"
                                android:inputType="textPassword"
                               />
                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="5dp"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:startIconDrawable="@drawable/matkhau"
                            app:startIconTint="#F26C68"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:endIconMode="password_toggle"
                            app:endIconTint="#F26C68"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtPasswordNhaplai"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Nhập lại mật khẩu mới"
                                android:background="@color/white"
                                android:padding="15dp"
                                android:textColor="@color/black"
                                android:inputType="textPassword"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="60dp"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="#F26C68"
                        app:cardCornerRadius="8dp"
                        >
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Lấy lại mật khẩu"
                            android:inputType="text"
                            android:textSize="18dp"
                            android:background="#F26C68"
                            android:textColor="@color/white"
                            android:id="@+id/btnthaydoimatkhau"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>-
        </LinearLayout>
    </FrameLayout>
</LinearLayout>