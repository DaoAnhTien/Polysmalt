<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    android:layout_margin="@dimen/_2sdp"
    android:layout_height="wrap_content"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_margin="@dimen/_2sdp"
            android:orientation="horizontal">
            <CheckBox
                android:layout_marginLeft="@dimen/_5sdp"
                android:button="@drawable/checkboxcustomtow"
                android:id="@+id/item_giohang_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_gravity="center"
                />
                <ImageView
                    android:id="@+id/item_giohang_imageview"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:background="@color/black"
                    />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/item_giohang_tensp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Ten san pham"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:padding="@dimen/_2sdp"
                    android:id="@+id/item_giohang_giasp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25000"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#FF0000"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_gravity="right"
                    android:background="@drawable/number"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_1sdp"
                        >
                        <ImageView
                            android:background="@drawable/btn_background_canhan"
                            android:id="@+id/item_giohang_imageview_tru"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/tru1"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/item_giohang_soluong"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_2sdp"
                        >
                        <ImageView
                            android:background="@color/white"
                            android:id="@+id/item_giohang_imageview_cong"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/tang1"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

    <!--                <TextView-->
    <!--                    android:id="@+id/item_giohang_gia"-->
    <!--                    android:layout_width="wrap_content"-->
    <!--                    android:layout_height="wrap_content"-->
    <!--                    android:text="Đơn Giá: 3000000"-->
    <!--                    android:textSize="@dimen/_10ssp"-->
    <!--                    android:textColor="@color/black"-->
    <!--                    android:padding="@dimen/_2sdp"-->
    <!--                    android:layout_marginLeft="@dimen/_10sdp"-->
    <!--                    />-->


            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>