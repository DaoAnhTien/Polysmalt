<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_4sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/white"
          android:gravity="center"
          android:text="Bạn muốn lấy lại mật khẩu bằng cách?"
          android:textSize="@dimen/_14ssp"
          android:background="@color/purple_500"
          android:textStyle="bold"
          android:padding="@dimen/_5sdp"
          />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_4sdp"
            android:layout_margin="@dimen/_5sdp"
            android:id="@+id/cardviewEmail"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:background="@drawable/btn_background_canhan"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lấy lại mật khẩu bằng Email"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/black"
                    android:layout_gravity="left|center"
                    android:padding="@dimen/_10sdp"
                    />
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:src="@drawable/next_drawble"
                    android:layout_gravity="right|center"
                    />
            </FrameLayout>
        </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardCornerRadius="@dimen/_4sdp"
          android:layout_margin="@dimen/_5sdp"
          android:id="@+id/cardviewOTP"
          >
          <FrameLayout
              android:layout_width="match_parent"
              android:background="@drawable/btn_background_canhan"
              android:layout_height="wrap_content"
              >
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Lấy lại mật khẩu bằng OTP"
                  android:textSize="@dimen/_12ssp"
                  android:textColor="@color/black"
                  android:layout_gravity="left|center"
                  android:padding="@dimen/_10sdp"
                  />
              <ImageView
                  android:layout_width="@dimen/_30sdp"
                  android:layout_height="@dimen/_45sdp"
                  android:src="@drawable/next_drawble"
                  android:layout_gravity="right|center"
                  />
          </FrameLayout>
      </androidx.cardview.widget.CardView>
  </LinearLayout>
</androidx.cardview.widget.CardView>