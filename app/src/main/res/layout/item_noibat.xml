<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_2sdp"
    app:cardCornerRadius="@dimen/_4sdp"
    android:layout_height="wrap_content">
<LinearLayout
    android:background="@drawable/btn_background_canhan"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_70sdp"
    android:weightSum="3"
    android:orientation="horizontal"
    android:layout_margin="@dimen/_2sdp"
    >
    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/_10sdp"
        android:src="@drawable/ic_launcher_background"
        android:id="@+id/image_noibat"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="iphone 16 pro max lengthganaigo"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/_20ssp"
            android:layout_marginVertical="@dimen/_1sdp"
            android:id="@+id/txt_nameproduc_noibat"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$ 999.999.999.999"
            android:textColor="@color/red"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:paddingLeft="@dimen/_20ssp"
            android:id="@+id/txt_price_noibat"
            />
    </LinearLayout>




</LinearLayout>

</androidx.cardview.widget.CardView>