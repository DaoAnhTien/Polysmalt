<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.user.Ketquatimkiem_thatbai_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kết quả tìm kiếm ID"
            android:gravity="center"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:textStyle="bold|italic"
            android:layout_marginBottom="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Kết quả tìm kiếm bằng cách kết hợp giữa"
            android:gravity="center"
            android:textSize="@dimen/_14ssp"
            />
        <TextView
            android:textSize="@dimen/_14ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại và email của bạn"
            android:gravity="center"
            />
        <TextView
            android:layout_margin="@dimen/_20sdp"
            android:textSize="@dimen/_18ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Không tìm thấy kết quả"
            android:textColor="@color/red"
            android:gravity="center"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ketquatimkiemthatbai_thulai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thử lại"
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp"
                android:background="@color/purple_500"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>